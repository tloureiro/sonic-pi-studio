{
  "name": "sonic-pi-studio",
  "displayName": "Sonic Pi Studio",
  "description": "Sonic Pi GUI alternative",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sonic-pi-studio.startServer",
        "title": "Sonic Pi Studio: Start Server"
      },
      {
        "command": "sonic-pi-studio.playTestNote",
        "title": "Sonic Pi Studio: Play Test Note"
      },
      {
        "command": "sonic-pi-studio.stopServer",
        "title": "Sonic Pi Studio: Stop Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sonic Pi Configuration",
      "properties": {
        "sonicPi.path": {
          "type": "string",
          "default": "~/projects/sonic-pi/",
          "description": "Path to the Sonic Pi folder"
        },
        "sonicPi.runningMode": {
          "type": "string",
          "default": "Current Folder",
          "description": "Specifies the running mode for Sonic Pi code execution.",
          "enum": ["Current Folder"],
          "enumDescriptions": [
            "Runs all the .rb files present in the folder of the last saved file."
          ]
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "node-osc": "^9.1.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
